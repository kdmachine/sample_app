<li id="micropost-<%= micropost.id %>">
  <%= link_to gravatar_for(micropost.user, size: Settings.settings.profile_avatar), micropost.user %>
  <span class="user"><%= link_to micropost.user.name, micropost.user %></span>
  <span class="content">
    <%= micropost.content %><%= image_tag micropost.image if micropost.image.attached? %>
    
  </span>
  <span class="timestamp">
    <%= sanitize t(".post", time: time_ago_in_words(micropost.created_at)) %>
    <% if current_user? micropost.user %>
      <%= button_to t(".delete"), micropost, method: :delete, data: {confirm: t(".sure")} %>
    <% end %>
  </span>
</li>
