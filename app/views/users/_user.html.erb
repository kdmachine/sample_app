<li>
  <%= gravatar_for user, size: Settings.settings.profile_avatar%>
  <%= link_to user.name, user %>
  <% if current_user.admin? && !current_user?(user) %>
    <%= button_to t("user_delete"), user, method: :delete,
                                  data: { confirm: t("deleting") } %>
  <% end %>
</li>
